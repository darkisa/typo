<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<%- if current_user.profile.label == 'admin' && !@article.new_record? %>
  <%= form_tag admin_merge_articles_path do %>
    <h4> Merge Articles </h4>
    <%= label_tag 'Article ID' %>
    <div class="input">
      <%= text_field_tag "second_article" %>
      <%= submit_tag 'Merge' %>
    </div>
  <% end %>
<% end %>
